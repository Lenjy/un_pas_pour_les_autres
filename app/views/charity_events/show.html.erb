
<div class="banner_show" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "Coluche-les-Restos-et-les-Enfoires.jpg"%>'); height: 400px;">
  <div class="d-flex justify-content-center mt-5">
    <h1 class="charity_event_title"><%= @charity_event.title %></h1>
  </div>
  <div class="d-flex justify-content-center mt-4">
    <% if Date.today < @charity_event.date_beginning %>
     <h1> du <%= @charity_event.date_beginning.strftime("%d-%m-%Y") %> au <%= @charity_event.date_ending.strftime("%d-%m-%Y") %></h1>
    <% elsif @charity_event.date_beginning <= Date.today && Date.today <= @charity_event.date_ending %>
     <h1> <%=distance_of_time_in_words(Time.current, @charity_event.date_ending)%></h1>
    <% else %>
      <h1>Cet evenement est terminé</h1>
    <% end %>
  </div>
</div>


