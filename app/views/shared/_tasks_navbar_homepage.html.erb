<div class="d-block show col-md-auto col-md-auto <%= myclass %>" style="">
    <h1><%= label %></h1>
    <div class="card-trip-statistics">
      <ul class="nav nav-tabs user-tasks-navbar btn-group" id="myTab" role="tablist">
        <li class="nav-item col-4" role="presentation" style="padding-right: 0px; padding-left: 0px">
          <a class="nav-link user-tasks-navbar-tab active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true"><%= tab_one %></a>
        </li>
        <li class="nav-item col-4" role="presentation" style="padding-right: 0px; padding-left: 0px">
          <a class="nav-link user-tasks-navbar-tab" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false"><%= tab_two %></a>
        </li>
        <li class="nav-item col-4" role="presentation" style="padding-right: 0px; padding-left: 0px">
          <a class="nav-link user-tasks-navbar-tab" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false"><%= tab_three %></a>
        </li>
      </ul>

      <div class="tab-content" id="myTabContent">

        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

        <div class="row">
          <h2 style="margin-top: 20px"><%= message_tab_one %></h2>
          <% (1..3).each do |i| %>

            <div class="col-3 d-flex justify-content-center">
              <div style="width: 120px; display: flex; align-items: center; justify-content: center">
                <div class=" bg-success text-center box-donate2" style="border-radius: 5px">
                  <h1 class='m-0 text-white'># <%= i %></h1>
                </div>
              </div>
            </div>

            <div class="col-9">
              <div class="card-product mt-4">
                <img src="https://www.tousbenevoles.org/images/association/1565005876.png" />
                <div id="chart-home-company-<%= i %>" style="margin-left: 16px" data-steps="<%= steps_tab_one[i - 1].to_json %>"></div>
              </div>
            </div>

          <% end %>

        </div>
        </div>

        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
          <div>
            <h2 style="margin-top: 20px"><%= %></h2>
          </div>
        </div>

        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
          <div>
            <p style="height: 400px; font-size: 20px; margin: 70px 70px 0px 70px">Sorry, we haven't configured this data yet with <strong>Google APIs</strong>. Our developers are currently working to make this data available.</p>
          </div>
        </div>
    </div>

    </div>
  </div>
