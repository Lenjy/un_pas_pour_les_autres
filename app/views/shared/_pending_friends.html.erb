<div class="card-product">
        <% @pending_friend_requests.each do |friend_request| %>
            <%= cl_image_tag friend_request.asker.photo.key, {class:"avatar-bordered"} %>
            <div class="card-product-infos">
                <div>
                    <h2><%= friend_request.asker.nickname %></h2>
                    <p><%= friend_request.asker.teams.first.name %></p>
                </div>
            </div>
            <div class="card-product-infos">
                <div class="d-flex justify-content-end mt-2">
                        <%= link_to 'Accept', friend_requests_new_path(friend_request, status: :accepted), method: :patch, data: {confirm: 'Are you sure you want to accept ?'}, class: "btn btn-primary" %>
                        <%= link_to 'Decline', friend_requests_new_path(friend_request, status: :declined), method: :patch, data: {confirm: 'Are you sure you want to accept ?'}, class: "btn btn-link text-primary" %>
                </div>
            </div>
        <% end %>
</div>
