<%# <%= render "shared/banner" %>
<div style="    width: 100%;background-color: #6da8b3;height: 300px;"> 
</div>
<div class="container bg-white rounded d-flex" style="width: 100%;height: 300px;position: relative;top: -100px; justify-content: space-around;align-items: center;">
  <div style="display: flex;align-items: center;">
    <% if current_user.photo.attached?  %>
      <%= cl_image_tag current_user.photo.key, style:"width: 220px;height: 220px;border-radius: 50%;", crop: :fill %>
    <% else %>
      <img style="width: 160px;height: 160px;border-radius: 50%;" alt="avatar-large" src="https://images.unsplash.com/photo-1590860773824-a6767b15dd59?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MjR8fG5vdGhpbmd8ZW58MHx8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" />
    <% end %>
  </div>
  <div style="display: flex;align-content: center;flex-direction: column;justify-content: center;align-items: flex-start;">
    <div style="margin-left: 10px;margin-bottom: 16px;">
      <h4><strong><%= "#{current_user.first_name} #{current_user.last_name}"%></strong></h4>
      <p style="margin: 0px 0px; opacity: 0.5;"> inscrit depuis le <%= I18n.l current_user.created_at, format:"%d %B %Y" %> </p>
    </div>
    <div class="d-flex">
      <div class="m-2 text-success" style="background-color: rgba(109, 168, 179, 0.2);width: 150px;height: 100px;border-radius: 8px;">
        <div style="margin: 10px 10px;">
          <p style="margin: 6px 0px;"> Nombre de pas </p>
          <h1><strong><%= number_with_delimiter(current_user.steps.where(date: Date.today).first.nb_steps, :delimiter => ',') %></strong></h1>
        </div>
      </div>
      <div class="m-2 text-success" style="background-color: rgba(109, 168, 179, 0.2);width: 150px;height: 100px;border-radius: 8px;">
        <div style="margin: 10px 10px;">
          <p style="margin: 6px 0px;"> Total don </p>
          <h1><strong>45</strong></h1>
        </div>
      </div>
    </div>
  </div>
  <div>
    <%= link_to "éditer son profil", edit_user_registration_path, class: 'btn btn-success' %>
  </div>
</div>

<div class="container text-center">


  <%= render 'shared/tasks_navbar_personal',
  label: "Vos statistiques",
  tab_one: "Semaine",
  tab_two: "Mois",
  tab_three: "Kilomètres",
  id_tab_one: "week", message_tab_one: @week_message, steps_tab_one: @week_steps,
  id_tab_two: "month", message_tab_two: @month_message, steps_tab_two: @month_steps,
  myclass: "" %>


  <%= render 'shared/tasks_navbar_team',
  label: "Vos teams",
  tab_one: "Team 1",
  tab_two: "Team 2",
  tab_three: "Team 3",
  id_tab_one: "team-one", message_tab_one: @team_message, steps_tab_one: @team_one_steps,
  myclass: "mt-5" %>

  <div class="d-flex justify-content-around" style="margin-left: 58px; margin-right: 6px; margin-bottom: 40px">
    <% @team.each do |member| %>
      <div style="background-color: white; padding: 10px 54px; border-radius: 2px; box-shadow: 0 0 6px rgba(109, 168, 179, 50%); margin-top: 7px">
        <%= cl_image_tag member.photo.key, class: "avatar-bordered"%>
      </div>
    <% end %>
  </div>

</div>

<div class="container" style="width:100%; height: auto;">
  <div>
    <div class="row">
      <div class="col-6">
        <%= render  'shared/accepted_friends'%>
      </div>
      <div class="col-6">
        <%= render 'shared/pending_friends'%>
      </div>
    <div>
</div>